          NewTypeNav( DBNavigator1 ).Buttons[nbPrior].Glyph.LoadFromFile('D:\OneDrive\BKPDELL\DESKTOP\CURSOS\YOUTUBE\DELPHI\1 CLINICHELP\icons\prior.bmp');
            NewTypeNav( DBNavigator1 ).Buttons[nbNext].Glyph.LoadFromFile('D:\OneDrive\BKPDELL\DESKTOP\CURSOS\YOUTUBE\DELPHI\1 CLINICHELP\icons\next.bmp');
