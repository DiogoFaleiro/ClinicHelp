      NewTypeNav( DBNavigator1 ).Buttons[nbEdit].Glyph.LoadFromFile('D:\OneDrive\BKPDELL\DESKTOP\CURSOS\YOUTUBE\DELPHI\1 CLINICHELP\icons\edit.bmp');
